<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="12dp">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textStyle="bold"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/settingsDivider1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFF"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/highScoresTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/high_scores_title"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/settingsDivider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/highScoresTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/easyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/easy"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/easyScore"/>

    <TextView
        android:id="@+id/easyScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/easyTitle"
        app:layout_constraintStart_toEndOf="@id/easyTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/fake_score"/>

    <View
        android:id="@+id/settingsDivider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/easyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mediumTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/medium"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mediumScore"/>

    <TextView
        android:id="@+id/mediumScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/mediumTitle"
        app:layout_constraintStart_toEndOf="@id/mediumTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/fake_score"/>

    <View
        android:id="@+id/settingsDivider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mediumTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/hardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hard"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/hardScore"/>

    <TextView
        android:id="@+id/hardScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/hardTitle"
        app:layout_constraintStart_toEndOf="@id/hardTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/fake_score"/>

    <View
        android:id="@+id/settingsDivider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/hardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/impossibleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/impossible"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/impossibleScore"/>

    <TextView
        android:id="@+id/impossibleScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/impossibleTitle"
        app:layout_constraintStart_toEndOf="@id/impossibleTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/fake_score"/>

    <View
        android:id="@+id/settingsDivider6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/impossibleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/resetScoresButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:text="@string/reset_scores"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/settingsDivider6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:text="@string/close"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>